<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/_5sdp"
    tools:context=".ManageServices">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_below="@id/textview_manage_services"
            android:backgroundTint="@color/background"
            android:textColorHint="@color/text"
            app:boxStrokeColor="@color/text"
            app:endIconTint="@color/text"
            app:hintTextColor="@color/text">
            <AutoCompleteTextView
                android:id="@+id/dropdown_ManageServices"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background"
                android:hint="Select Status"
                android:inputType="none"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="@dimen/_16sdp"
                tools:ignore="HardcodedText,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textview_manage_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="Manage Services"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_130sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</ScrollView>