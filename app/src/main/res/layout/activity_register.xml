<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:layout_margin="@dimen/_19sdp">

        <TextView
            android:id="@+id/textview_register_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/please_enter_your_details_to_register_on_the_app"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            tools:ignore="TextSizeCheck" />


        <TextView
            android:id="@+id/textview_register_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_register_head"
            android:layout_marginTop="@dimen/_35sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/first_name"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/editText_register_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_register_first_name"
            android:background="@drawable/border"
            android:hint="@string/fname"
            android:inputType="textPersonName"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            tools:ignore="Autofill,TouchTargetSizeCheck,TextContrastCheck,TextSizeCheck" />

        <TextView
            android:id="@+id/textview_register_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_register_first_name"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/middle_name"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/editText_register_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_register_middle_name"
            android:background="@drawable/border"
            android:hint="@string/mname"
            android:inputType="textPersonName"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            tools:ignore="Autofill,TouchTargetSizeCheck,TextSizeCheck" />

        <TextView
            android:id="@+id/textview_register_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_register_middle_name"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/last_name"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/editText_register_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_register_last_name"
            android:background="@drawable/border"
            android:hint="@string/lname"
            android:inputType="textPersonName"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            tools:ignore="Autofill,TouchTargetSizeCheck,TextSizeCheck" />

        <TextView
            android:id="@+id/textview_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_register_last_name"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/txtviewemail"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/editText_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_register_email"
            android:background="@drawable/border"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            tools:ignore="Autofill,TouchTargetSizeCheck,TextSizeCheck" />

        <TextView
            android:id="@+id/textview_register_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_register_email"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/gender"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            tools:ignore="TextSizeCheck" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/textview_register_gender"
            android:checkedButton="@+id/radio_female"
            android:id="@+id/radio_group_register_gender">

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/female"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:theme="@style/RadioButtonStyle"
                tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />


            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:text="@string/male"
                android:textColor="@color/text"
                android:textSize="@dimen/_15sdp"
                android:theme="@style/RadioButtonStyle"
                tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />


        </RadioGroup>

        <TextView
            android:id="@+id/textview_register_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group_register_gender"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/mobile_number"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/editText_register_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_register_mobile"
            android:background="@drawable/border"
            android:hint="@string/mno"
            android:inputType="phone"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            tools:ignore="Autofill,TouchTargetSizeCheck,TextSizeCheck" />

        <TextView
            android:id="@+id/textview_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_register_mobile"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/txtviewpassword"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            tools:ignore="TextSizeCheck" />

        <ImageView
            android:id="@+id/imageview_show_hide_pwd"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_below="@id/textview_register_password"
            android:layout_marginStart="@dimen/_225sdp"
            android:layout_marginTop="@dimen/_2sdp"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <EditText
            android:id="@+id/editText_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_register_password"
            android:layout_marginEnd="@dimen/_23sdp"
            android:background="@drawable/border"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            tools:ignore="Autofill,TouchTargetSizeCheck,TextSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_register_confirm_password"
            android:layout_below="@id/editText_register_password"
            android:text="@string/confirm_password"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp" />

        <ImageView
            android:id="@+id/imageview_show_hide_pwd1"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_below="@id/textview_register_confirm_password"
            android:layout_marginStart="@dimen/_225sdp"
            android:layout_marginTop="@dimen/_2sdp"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <EditText
            android:id="@+id/editText_register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_register_confirm_password"
            android:layout_marginEnd="@dimen/_23sdp"
            android:background="@drawable/border"
            android:hint="@string/confirmpassword"
            android:inputType="textPassword"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            tools:ignore="Autofill,TouchTargetSizeCheck" />



        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_below="@id/editText_register_confirm_password"
            android:layout_marginTop="@dimen/_45sdp"
            android:text="@string/register"
            android:id="@+id/button_register"
            android:backgroundTint="@color/background"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="@dimen/_9sdp"
            android:visibility="gone"/>
    </RelativeLayout>
</ScrollView>