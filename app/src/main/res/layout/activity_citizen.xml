<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Admin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:background="@color/background"
        android:padding="@dimen/_15sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxWidth="@dimen/_300sdp"
            android:src="@drawable/logo"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/services"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            tools:ignore="RtlSymmetry,TextSizeCheck" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_100sdp"
            android:text="@string/complaints"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            tools:ignore="RtlSymmetry,TextSizeCheck" />



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background"
            android:textColorHint="@color/text"
            app:boxStrokeColor="@color/text"
            app:hintTextColor="@color/text"
            app:endIconTint="@color/text"
            android:layout_below="@id/text1"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/autoComplete1"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background"
                android:hint="@string/select"
                android:inputType="none"
                android:textColorHint="@color/text"
                android:textColor="@color/text"
                android:textSize="@dimen/_16sdp"
                tools:ignore="LabelFor,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background"
            android:textColorHint="@color/text"
            android:layout_below="@id/text2"
            app:boxStrokeColor="@color/text"
            app:hintTextColor="@color/text"
            app:endIconTint="@color/text"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/autoComplete2"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background"
                android:hint="@string/select2"
                android:inputType="none"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="@dimen/_16sdp"
                tools:ignore="LabelFor,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_60sdp"
            android:textSize="@dimen/_20sdp"
            tools:ignore="RtlSymmetry,TextSizeCheck" />

    </RelativeLayout>
</ScrollView>