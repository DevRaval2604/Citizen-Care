<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_complaints"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardBackgroundColor="@color/text"
    android:elevation="@dimen/_6sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:background="@color/background"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/uname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45sdp"
            android:text="Name"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/ctype1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complaint Type:"
            android:layout_below="@id/uname"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/ctype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uname"
            android:layout_marginStart="@dimen/_110sdp"
            android:text="Complaint Type"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/fDesc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ctype"
            android:text="Description:"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />


        <TextView
            android:id="@+id/fDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ctype"
            android:layout_marginStart="@dimen/_82sdp"
            android:text="Description"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />


        <TextView
            android:id="@+id/fStar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fDesc"
            android:text="Rating:"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/fStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fDesc"
            android:layout_marginStart="@dimen/_48sdp"
            android:text="Star rating"
            android:textColor="@color/text"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>