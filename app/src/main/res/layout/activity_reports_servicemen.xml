<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Reports_Servicemen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:layout_margin="@dimen/_25sdp">

        <TextView
            android:id="@+id/textView_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="You can view and download your reports."
            android:textColor="@color/text"
            android:textSize="@dimen/_23sdp"
            android:textAlignment="center"
            tools:ignore="HardcodedText,RtlSymmetry,TextSizeCheck" />

        <TextView
            android:id="@+id/textview_service_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_below="@id/textView_head"
            android:text="Service Report"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            tools:ignore="HardcodedText,RtlSymmetry,TextSizeCheck" />


        <TextView
            android:id="@+id/textview_complaint_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@id/textview_service_report"
            android:text="Complaint Report"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            tools:ignore="HardcodedText,RtlSymmetry,TextSizeCheck" />



    </RelativeLayout>

</ScrollView>