<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_15sdp"
    android:padding="@dimen/_15sdp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background"
        android:text="@string/register"
        android:minWidth="@dimen/_32sdp"
        android:textSize="@dimen/_20ssp"
        android:layout_marginStart="350dp"
        android:textColor="@color/text"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background"
        android:minWidth="@dimen/_32sdp"
        android:textSize="@dimen/_20ssp"
        android:layout_toEndOf="@+id/btn1"
        android:text="@string/login"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_273sdp"
        android:paddingStart="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:layout_below="@id/btn1"
        android:text="@string/services"
        android:textSize="@dimen/_30ssp"
        android:textColor="@color/text"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_60sdp"
        android:paddingStart="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:layout_below="@id/text1"
        android:text="@string/complaints"
        android:textSize="@dimen/_30ssp"
        android:textColor="@color/text"
        tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_190sdp"
            android:paddingStart="@dimen/_400sdp"
            android:layout_centerVertical="true"
            android:layout_below="@id/text2"
            android:text="@string/feedback"
            android:textSize="@dimen/_30ssp"
            android:textColor="@color/text"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_marginTop="@dimen/_30sdp"
            android:maxWidth="@dimen/_300sdp"
            android:src="@drawable/logo"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:importantForAccessibility="no" />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:textColor="@color/text"
            android:textSize="@dimen/_30ssp"
            android:text="@string/about_us"
            android:paddingTop="@dimen/_190sdp"
            android:paddingStart="@dimen/_10sdp"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:textColor="@color/text"
            android:textSize="@dimen/_30ssp"
            android:text="@string/contact_us"
            android:paddingTop="@dimen/_190sdp"
            android:paddingStart="@dimen/_200sdp"
            tools:ignore="RtlSymmetry" />
</RelativeLayout>
    </HorizontalScrollView>
</ScrollView>